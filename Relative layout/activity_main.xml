<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#F8FDFD"
    tools:context=".MainActivity"
    android:layout_marginTop="-70dp">

    <ImageView
        android:id="@+id/inst"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/inst" />

    <EditText
        android:id="@+id/inst1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inst"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="66dp"
        android:ems="10"
        android:hint="Phone number,username or email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/inst2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inst1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="66dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inst2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="#3897F0"
        android:text="Log In"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inst2"
        android:layout_alignParentRight="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="55dp"
        android:background="#F6F7F8"
        android:text="Forgot Password?"
        android:textStyle="bold"
        android:textColor="#3897F0"
        android:textSize="17dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="86dp"
        android:layout_height="63dp"
        android:layout_below="@+id/inst2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="#3897F0"
        app:srcCompat="@drawable/facebook" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inst2"
        android:layout_marginLeft="-80dp"
        android:layout_marginTop="221dp"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Continue as"
        android:textColor="#3897F0"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@id/button"
        android:id="@+id/l1"
        android:layout_marginTop="40dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E7E7E7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="OR"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E7E7E7"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:text="Don't have an account?">

    </TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/textView4"
        android:textColor="#3897F0"
        android:text="Sign Up"
        android:textStyle="bold"/>


</RelativeLayout>